package com.pavan.array;

public record RecordOffer(String description) {




}
----------------------
package com.pavan.array;

public record Student1(String name,EducationInstitute institute) {
	
	public void viewCoursesAndFees()
	{
		for (Course c:institute.courses())
		{
			System.out.println(c.id()+":"+c.name()+":"+c.fee());
		}
	}
	public void viewOffers()
	{
		for(RecordOffer o:institute.Offers())
		{
			System.out.println(o.description());
		}
	}
	public void enrollnCourse(int courseid)
	{
		institute.enrollStudentCourse(courseid, name);
	}

}
------------------------------------------
package com.pavan.array;

public record EducationInstitute(Course[]courses,RecordOffer[]Offers) {
	public void enrollStudentCourse(int courseid,String studentName)
	{
		boolean found=false;
		
		for(Course c:courses)
		{
			if(c.id( ) == courseid)
			{
				System.out.println(studentName+" enrolled in: "+c.name());
				found=true;
				break;
			}
		}
		if(!found)
		{
			System.out.println("Course with id "+courseid +" not found");
		}
	}

}
