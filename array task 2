//ELC
package com.pavan.array;

import java.util.Scanner;

public class StudentEnrollmentProcess {

	public static void main(String[] args) {
		Course[]courses=
			{
					new Course(1,"Java",35000.0),
					new Course(1,".net",30000.0),
					new Course(1,"python",32000.0),
			};
		RecordOffer[]offers=
			{
					new RecordOffer ("Special discount:Get 20% off on all courses"),
					new RecordOffer("Limited time offer:enroll in any two courses and get one course fees!")
			};
		EducationInstitute institute =new EducationInstitute(courses,offers);
			
		Scanner sc=new Scanner(System.in);
		System.out.println("Enter Student name:");
		String studentName=sc.nextLine();
		
		Student1 student=new Student1(studentName,institute);
		
		student.viewCoursesAndFees();
		student.viewOffers();
		
		System.out.println("Enter course id to enroll:");
		int courseid=sc.nextInt();
		
		student.enrollnCourse(courseid);
		
				
	}

}
=======================================================
OUTPUT:
Enter Student name:
pavan
1:Java:35000.0
1:.net:30000.0
1:python:32000.0
Special discount:Get 20% off on all courses
Limited time offer:enroll in any two courses and get one course fees!
Enter course id to enroll:
1
pavan enrolled in: Java
